---
import { Image } from 'astro:assets';
import 'swiper/css';
import 'swiper/css/pagination';
interface Props {
  images: string[]
}

const { images } = Astro.props
const fullImages = images.map(image => {
  return image.startsWith('http') ? image : `${import.meta.env.PUBLIC_URL}/images/products/${image}`
})
console.log(fullImages);

---

<!-- Slider main container -->
<div class="swiper mt-1.5 col-span-1 sm:col-span-2">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">
    <!-- Slides -->
    {fullImages.map(image => (
      <div class="swiper-slide">
        <img src={image} alt='Product image' class="w-full h-full object-cover pr-20" />
      </div>

    ))}
  </div>
  <!-- If we need pagination -->
  <div class="swiper-pagination"></div>
</div>

<script>
  import Swiper from 'swiper';
  import { Pagination } from 'swiper/modules'

  const swiper = new Swiper('.swiper', {
  // If we need pagination
  pagination: {
    el: '.swiper-pagination',
  },

  modules: [Pagination]
});

</script>

<style>
  .swiper {
    width: 100%;
    height: 100%;
  }
</style>
